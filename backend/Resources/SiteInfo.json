{
  "site_keys":{
    "maxpreps": {
      "site_url": "https://www.maxpreps.com",
      "scraping": {
        "steps": [
          {
            "description": "State-level directory of teams",
            "scrape_method":["entry"],
            "pattern": "/{state}/{sport}/schools/"
          },
          {
            "description": "Main landing page for a specific team",
            "scrape_method": ["match","access_each"],
            "match": {
              "pattern": "/{state}/{county}/{team_name}/{sport}",
              "tag": "a",
              "attr": "href"
            },
            "match_type":"href"
          },
          {
            "description": "Roster page listing all athletes",
            "scrape_method": ["attach","access_each"],
            "match": {
              "pattern": "/{state}/{county}/{team_name}/{sport}/roster/",
              "tag": "a",
              "attr": "href"
            }
          },
          {
            "description": "Individual athlete profile page",
            "scrape_method": ["match","access_each"],
            "match": {
              "regex_pattern": "careerid=[a-z0-9]+",
              "pattern": "/{state}/{county}/{team_name}/athletes/{name}/{random_string}",
              "tag": "a",
              "attr": "href"
            }
          },
          {
            "description": "Athlete Data Scraping: Targeting embedded JSON blob containing bio, stats, and timeline data",
            "scrape_method": ["target","store"],
            "target": {
              "element": "id",
              "id": "__NEXT_DATA__"
            }
          }
        ]
        },
      "parsing": {
        "bio_parsing": {
          "description": "Targeting static bio information from ex_player_bio.json",
          "access_path": [
            "props",
            "pageProps",
            "careerContext"
          ],
          "target_nodes": [
            "careerData",
            "careerPlayerData",
            "recentSchool",
            "recentSportSeason"
          ]
        },
        "stats_parsing": {
          "description": "Targeting statistical groups from ex_player_stats.json",
          "access_path": [
            "props",
            "pageProps",
            "statsCardProps",
            "careerRollup",
            "groups"
          ],
          "target_groups": [
            "Game Stats",
            "Shooting",
            "Totals",
            "Misc Totals",
            "Per 32"
          ]
        },
        "timeline_parsing": {
          "description": "Targeting timeline/feed data from ex_player_info.json",
          "access_path": [
            "props",
            "pageProps"
          ],
          "target_nodes": [
            "timelineItems"
          ]
        }
      }
    }
  }
}




